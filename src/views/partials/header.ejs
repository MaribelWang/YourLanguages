<nav>
    <a href="/" class="navbar">
        <img src="../../../public/assets/logo.png" class="navbar-logo" alt="logo" />
    </a>

    <% if (user.email == "") { %>
        <a href="/login-form" class="btn btn-primary pull-right" style="background-color: blue;">Log in</a>
        <a href="/register-form" class="btn btn-primary pull-right" style="background-color: blue;">Sign Up</a>
    <% } else { %>
        <a href="/log-out" class="btn btn-primary pull-right" style="background-color: blue;">Log Out</a>
        <form action="/delete-account/<= user.id>?_method=DELETE" method="POST" class="btn pull-right">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" style="background-color: red; border-radius: 5px;">Delete Account</button>
        </form>

        <!--Data of the user if a session exist-->
        <button type="button" >
            <img 
            style="border-radius: 50%; width: 50px; height: 50px;" 
            src=<%= user.imagePath %> 
            alt="Button Image"
            placeholder= "My profile">
        </button>
        
        <h1><%= user.email %></h1>
    <% } %>
    </nav>
<hr>