<!DOCTYPE html>
<html lang="en">
    <%- include ('partials/head.ejs') %>
<body>
    <div class="centered-container">
    <div class="login-form-container">
        <h2>Login</h2>
        
        <form method="post" action="/login">
            <div class="col-sm-2">
                <div style="display: flex; flex-direction: column;">
                <input class="form-group" type="email" name="email" 
                placeholder="email@example.com" autofocus style="margin: 5px;" value="<%= locals.old && old.email %>" autocomplete="username"> 
                <% if (locals.errors && errors.email){ %>
                    <p class="feedback"><%= errors.email.msg %></p>
                    <% } %>
                    <input class="form-group" type="password" name="password" style="margin: 5px;" autocomplete="current-password">
                <% if (locals.errors && errors.password){ %>
                    <p class="feedback"><%= errors.password.msg %></p>
                    <% } %> 
                </div>
                <p class="remember">
                    <input type="checkbox" id="remember" name="remember" value="1"/>
                    <label for="remember">Remember</label>
                </p>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary">
            </div>
                <p>Don't have an account?</p>
                <a href="/register-form" class="btn btn-primary">Register</a>
        </div>
        </form>
    </div>
</div>
</html>